<phpunit colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    stopOnFailure="false"
    stopOnError="false"
    syntaxCheck="true">

    <testsuite name="Parables Test Suite">
        <directory>./Parables</directory>
    </testsuite>

    <filter>
        <whitelist>
            <directory suffix=".php">../Parables/</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html"
            target="./logs/report"
            charset="UTF-8"
            yui="true"
            highlight="true"
            lowUpperBound="50"
            highLowerBound="80"/>

        <log type="testdox-html" target="./logs/testdox.html" />
    </logging>
</phpunit>
